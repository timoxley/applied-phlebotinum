@import "nib"

@font-face {
	font-family: 'CCRedAlertLANRegular';
	src: url('/fonts/cc_red_alert_lan-webfont.eot');
	src: url('/fonts/cc_red_alert_lan-webfont.eot?#iefix') format('embedded-opentype') 
	src: url('/fonts/cc_red_alert_lan-webfont.woff') format('woff') 
	src: url('/fonts/cc_red_alert_lan-webfont.ttf') format('truetype') 
	src: url('/fonts/cc_red_alert_lan-webfont.svg#CCRedAlertLANRegular') format('svg');
	font-weight: normal;
	font-style: normal;
}


app-width = 900px
x-padding = 40px 
y-padding = 20px 

body
	background-color: black
	padding: 70px 0

header, footer, #content
	width: app-width
	margin: 0 auto
		
header, footer
	.wrap
		padding: 20px 0

header
	h1
		a
			color: #C02
			text-decoration: none
			font-size: 20px
			font-family: CCRedAlertLANRegular

footer
	a
		color: #555

#content
	background: rgba(#fafafa, 0.9)
	border-top: 0px solid #fefefe
	border-left: 0px solid #fefefe
	.wrap
		position:relative
		width: 900px
		height: 506px
		#overlay
			position:absolute
			top: 0px
			left: 0px
			width: 900px
			height: 506px
			background: url("/images/overlay.png")
	// 	padding: y-padding x-padding
	#world
		border: 0px solid #eee
